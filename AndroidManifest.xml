<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burnevsky.firu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FiruApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchFragment"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TranslationsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TrainerActivity"
            android:label="@string/app_name">
        </activity>
        <!--
             uses-library 
            android:name="org.sqlite"
            android:required="true"/
        -->
        <activity
            android:name=".StatActivity"
            android:label="@string/title_activity_stat" >
        </activity>
        <activity
            android:name=".ExamResultActivity"
            android:label="@string/title_activity_exam_result" >
        </activity>
        <activity
            android:name=".SearchTransFragment"
            android:label="@string/title_activity_search_trans"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" >
        </activity>
    </application>

</manifest>
