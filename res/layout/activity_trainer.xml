<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTrainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="1/1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/challenge_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/trainer_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="challenge"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_weight="2"
            android:background="@color/trainer_bg"
            android:ems="10"
            android:gravity="center"
            android:padding="3dp"
            android:text="guess"
            android:textSize="28sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rltIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imgHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_help"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_forward_dark" />

        <ImageView
            android:id="@+id/imgLife2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_favorite" />

        <ImageView
            android:id="@+id/imgLife1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/imgLife2"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/imgLife2"
            android:src="@drawable/ic_action_favorite" />

        <ImageView
            android:id="@+id/imgLife3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/imgLife2"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/imgLife2"
            android:src="@drawable/ic_action_favorite" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltMarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textTestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Passed with hints"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textOldMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Learning" />

        <TextView
            android:id="@+id/textNewMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:text="With hints" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="11"
        android:rowCount="4" >

        <Button
            android:id="@+id/btnEnter"
            style="?android:attr/buttonStyle"
            android:layout_column="9"
            android:layout_columnSpan="2"
            android:layout_gravity="center|right"
            android:layout_marginBottom="10dp"
            android:layout_row="2"
            android:minHeight="42dp"
            android:minWidth="50dp"
            android:text="OK" />

    </GridLayout>

</LinearLayout>
