<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTrainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rltChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textWord"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="challenge"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@id/textWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pbExamProgress"
            android:layout_alignParentEnd="false"
            android:ems="10"
            android:gravity="center"
            android:text="guess"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@id/pbExamProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rltLifes"
            android:progress="78" />

        <RelativeLayout
            android:id="@id/rltLifes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textMark"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgLife2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_favorite" />

            <ImageView
                android:id="@+id/imgLife1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/imgLife2"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@id/imgLife2"
                android:src="@drawable/ic_action_favorite" />

            <ImageView
                android:id="@+id/imgLife3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/imgLife2"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/imgLife2"
                android:src="@drawable/ic_action_favorite" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rltLifes"
            android:src="@drawable/ic_action_help"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rltLifes"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_forward" />

        <TextView
            android:id="@id/textMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="With hints"
            android:textAppearance="?android:attr/textAppearanceSmall" />

     

    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="11"
        android:padding="5dp"
        android:rowCount="4" >

        <Button
            android:id="@+id/btnEnter"
            style="?android:attr/buttonStyle"
            android:layout_column="9"
            android:layout_columnSpan="2"
            android:layout_gravity="center|right"
            android:layout_row="2"
            android:minHeight="40dp"
            android:minWidth="48dp"
            android:padding="0dp"
            android:text="OK" />

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center|left"
            android:layout_row="2"
            android:adjustViewBounds="false"
            android:minHeight="40dp"
            android:minWidth="48dp"
            android:padding="0dp"
            android:scaleType="center"
            android:src="@drawable/ic_action_backspace" />

    </GridLayout>

</LinearLayout>