<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rowCount="12"
    app:columnCount="2"
    tools:context="com.burnevsky.firu.StatActivity"
    android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Words"
            android:id="@+id/textView2"
            app:layout_column="0"
            app:layout_row="0"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtNumWords"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Translations"
            android:id="@+id/textView4"
            app:layout_column="0"
            app:layout_row="1"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="500"
            android:id="@+id/txtNumTrans"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/total_trans_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Forward"
            android:id="@+id/textView6"
            app:layout_column="0"
            app:layout_row="2"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFwd0"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="0"
            android:stepSize="1"
            app:layout_row="3"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtFwdYetToLearn"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate0_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFwd1"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="1"
            android:stepSize="1"
            app:layout_row="4"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtFwdWithHints"
            app:layout_column="1"
            app:layout_row="4"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate1_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFwd2"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="2"
            android:stepSize="1"
            app:layout_row="5"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtFwdAlmost"
            app:layout_column="1"
            app:layout_row="5"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate2_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFwd3"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="3"
            android:stepSize="1"
            app:layout_row="6"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtFwdLearned"
            app:layout_column="1"
            app:layout_row="6"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate3_trans_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reverse"
            android:id="@+id/textView8"
            app:layout_column="0"
            app:layout_row="7"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRev0"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="0"
            android:stepSize="1"
            app:layout_row="8"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtRevYetToLearn"
            app:layout_column="1"
            app:layout_row="8"
            app:layout_gravity="right"
            android:gravity="center_vertical|end"
            android:background="@color/rate0_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRev1"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="1"
            android:stepSize="1"
            app:layout_row="9"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtRevWithHints"
            app:layout_column="1"
            app:layout_row="9"
            app:layout_gravity="right"
            android:gravity="center_vertical|end"
            android:background="@color/rate1_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRev2"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="2"
            android:stepSize="1"
            app:layout_row="10"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtRevAlmost"
            app:layout_column="1"
            app:layout_row="10"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate2_trans_bg" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRev3"
            app:layout_column="0"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:isIndicator="true"
            android:rating="3"
            android:stepSize="1"
            app:layout_row="11"
            app:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100"
            android:id="@+id/txtRevLearned"
            app:layout_column="1"
            app:layout_row="11"
            app:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:background="@color/rate3_trans_bg" />

</android.support.v7.widget.GridLayout>
